# Database - Use the DATABASE_URL provided by Render in production
# For local development, use the format below
DATABASE_URL=postgresql://blood_donor_user:blood_donor_pass@localhost:5432/blood_donor_db

# JWT
SECRET_KEY=prod-secret-key-change-in-production-12345
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=Blood Donor API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production

# CORS
ALLOWED_ORIGINS=["https://backend-blood-donor-api.onrender.com", "http://localhost:3000", "http://localhost:8081"]

# Redis
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
